@model List<PhotoGallery.Data.Log>

@{
    ViewBag.Title = "Logs";
}

<div class="row">
    <div class="col-md-12">
       <br /><br />
        <table class="table table-responsive table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>Action Performed</th>
                    <th>Timestamp</th>
                    <th>IP Address</th>
                    <th>Status</th>
                    <th>Error Message</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    foreach (var log in Model)
                    {
                        <tr>
                            <td>@log.ActionPerformed</td>
                            <td>@log.DateAdded</td>
                            <td>@log.IpAddress</td>
                            <td>@log.ActionStatus</td>
                            <td>@(log.Message ?? "N/A")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="5">No logs found.</td></tr>
                }

            </tbody>
        </table>

    </div>
</div>